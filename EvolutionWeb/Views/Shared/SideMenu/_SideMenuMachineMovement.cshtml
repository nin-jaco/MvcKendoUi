@{
    var CurrentController = HttpContext.Current.Request.RequestContext.RouteData.Values["controller"].ToString();
    var CurrentAction = HttpContext.Current.Request.RequestContext.RouteData.Values["action"].ToString();
    CurrentAction = string.Format("{0}/{1}", CurrentController, CurrentAction);
}

<div class="section-container accordion" data-section="accordion">
    <section class="@EvolutionWeb.Code.GlobalUtilities.IsActive("Machine", CurrentController)">
        <p class="title" data-section-title=""><a href="#">Machine Movement</a></p>
        <div class="content" data-section-content="">
            <ul class="side-nav">
                <li class="@EvolutionWeb.Code.GlobalUtilities.IsActive("Machine/MovementRequest", CurrentAction)">@Html.ActionLink("Movement Request", "MovementRequest", "Machine")</li>
                <li class="@EvolutionWeb.Code.GlobalUtilities.IsActive("Machine/MovementApproval", CurrentAction)">@Html.ActionLink("Movement Approval", "MovementApproval", "Machine")</li>
            </ul>
        </div>
    </section>
</div>